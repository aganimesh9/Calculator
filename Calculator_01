def calculator():
    print("Welcome to Simple Text Calculator")
    print("Type 'exit' to quit.\n")

    while True:
        expression = input("Enter expression: ")

        if expression.lower() == "exit":
            print("Exiting calculator...")
            break

        try:
            result = eval(expression)   # eval() handles BODMAS automatically
            print("Result:", result)
        except Exception as e:
            print("Error:", e)

if __name__ == "__main__":
    calculator()

